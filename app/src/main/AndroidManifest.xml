<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alan.e_commerce">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controller.CategoryActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".Controller.ProductsActivity"
            android:parentActivityName=".Controller.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controller.CategoryActivity" />
        </activity>

        <activity
            android:name=".Controller.ProductActivity"
            android:parentActivityName=".Controller.ProductsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controller.CategoryActivity" />
        </activity>

        <activity
            android:name=".Controller.LoginActivity"
            android:parentActivityName=".Controller.CategoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controller.CategoryActivity" />
        </activity>

        <activity
            android:name=".Controller.RegisterActivity"
            android:parentActivityName=".Controller.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controller.LoginActivity" />
        </activity>
    </application>

</manifest>